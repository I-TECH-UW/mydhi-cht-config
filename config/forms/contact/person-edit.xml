      <instance>
        <data delimiter="#" id="contact:person:edit" prefix="J1!contact:person:edit!" version="2024-11-21_09-31">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <user>
              <contact_id/>
              <facility_id/>
              <name/>
            </user>
          </inputs>
          <person>
            <parent/>
            <_id/>
            <type>person</type>
            <date_reg/>
            <name/>
            <name_f/>
            <name1/>
            <full_name/>
            <docket/>
            <tsis/>
            <address/>
            <address1/>
            <phone/>
            <type1/>
            <network1/>
            <date_of_birth/>
            <at/>
            <genda/>
            <stat/>
            <meta tag="hidden">
              <created_by/>
              <created_by_person_uuid/>
              <created_by_place_uuid/>
              <last_edited_by/>
              <last_edited_by_person_uuid/>
              <last_edited_by_place_uuid/>
            </meta>
          </person>
          <init>
            <person_name/>
            <person_place_name/>
            <person_parent/>
            <type/>
            <name/>
            <note_place/>
            <change_parent>false</change_parent>
            <edited_place_type/>
            <id_district_hospital/>
            <id_health_center/>
            <id_clinic/>
          </init>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </data>
      </instance>
      <bind nodeset="/data/inputs" relevant="false()"/>
      <bind nodeset="/data/inputs/user/contact_id" type="string"/>
      <bind nodeset="/data/inputs/user/facility_id" type="string"/>
      <bind nodeset="/data/inputs/user/name" type="string"/>
      <bind calculate="../../person/name" nodeset="/data/init/person_name" type="string"/>
      <bind calculate="../name" nodeset="/data/init/person_place_name" type="string"/>
      <bind calculate=" /data/person/parent " nodeset="/data/init/person_parent" readonly="true()" type="string"/>
      <bind nodeset="/data/init/type" type="string"/>
      <bind nodeset="/data/init/name" type="string"/>
      <bind nodeset="/data/init/note_place" readonly="true()" type="string"/>
      <bind nodeset="/data/init/change_parent" required="true()" type="select1"/>
      <bind nodeset="/data/init/edited_place_type" relevant="selected( /data/init/change_parent , 'true')" required="true()" type="select1"/>
      <bind nodeset="/data/init/id_district_hospital" relevant="selected( /data/init/change_parent , 'true') and selected( /data/init/edited_place_type , 'district_hospital')" required="true()" type="db:district_hospital"/>
      <bind nodeset="/data/init/id_health_center" relevant="selected( /data/init/change_parent , 'true') and selected( /data/init/edited_place_type , 'health_center')" required="true()" type="db:health_center"/>
      <bind nodeset="/data/init/id_clinic" relevant="selected( /data/init/change_parent , 'true') and selected( /data/init/edited_place_type , 'clinic')" required="true()" type="db:clinic"/>
      <bind calculate="coalesce(coalesce(coalesce( /data/init/id_district_hospital ,  /data/init/id_health_center ),  /data/init/id_clinic ), /data/person/parent )" nodeset="/data/person/parent" type="string"/>
      <bind nodeset="/data/person/_id" readonly="true()" type="string"/>
      <bind nodeset="/data/person/type" readonly="true()" type="string"/>
      <bind nodeset="/data/person/date_reg" type="date"/>
      <bind nodeset="/data/person/name" required="true()" type="string"/>
      <bind nodeset="/data/person/name_f" required="true()" type="string"/>
      <bind nodeset="/data/person/name1" required="true()" type="string"/>
      <bind calculate="full_name" nodeset="/data/person/full_name" type="string"/>
      <bind nodeset="/data/person/docket" required="true()" type="int"/>
      <bind nodeset="/data/person/tsis" required="true()" type="int"/>
      <bind nodeset="/data/person/address" required="true()" type="string"/>
      <bind nodeset="/data/person/address1" type="string"/>
      <bind constraint="true()" nodeset="/data/person/phone" required="true()" type="tel"/>
      <bind nodeset="/data/person/type1" type="select1"/>
      <bind nodeset="/data/person/network1" type="select1"/>
      <bind constraint=". &lt;= today()" jr:constraintMsg="jr:itext('/data/person/date_of_birth:jr:constraintMsg')" nodeset="/data/person/date_of_birth" type="date"/>
      <bind nodeset="/data/person/at" type="select1"/>
      <bind nodeset="/data/person/genda" type="select1"/>
      <bind nodeset="/data/person/stat" type="select1"/>
      <bind nodeset="/data/person/meta/created_by" readonly="true()" type="string"/>
      <bind nodeset="/data/person/meta/created_by_person_uuid" readonly="true()" type="string"/>
      <bind nodeset="/data/person/meta/created_by_place_uuid" readonly="true()" type="string"/>
      <bind calculate="../../../inputs/user/name" nodeset="/data/person/meta/last_edited_by" type="string"/>
      <bind calculate="../../../inputs/user/contact_id" nodeset="/data/person/meta/last_edited_by_person_uuid" type="string"/>
      <bind calculate="../../../inputs/user/facility_id" nodeset="/data/person/meta/last_edited_by_place_uuid" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/data/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
