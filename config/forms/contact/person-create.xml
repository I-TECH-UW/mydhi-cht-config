<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms">
  <h:head>
    <h:title>New Person</h:title>
    <model>
      <itext>
        <translation lang="en">
          <text id="/data/person/role:hint">
            <value>Select the role that best suits this person</value>
          </text>
        </translation>
      </itext>
      <instance>
        <data id="contact:person:create" prefix="J1!contact:person:create!" delimiter="#" version="2022-07-19_20-20">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <user>
              <contact_id/>
              <facility_id/>
              <name/>
            </user>
          </inputs>
          <person>
            <parent/>
            <type>person</type>
            <name/>
            <aka/>
            <docket/>
            <telephone/>
            <type1/>
            <cell/>
            <role/>
            <date_of_birth/>
            <digital/>
            <at/>
            <genda/>
            <stat/>
            <meta tag="hidden">
              <created_by/>
              <created_by_person_uuid/>
              <created_by_place_uuid/>
            </meta>
          </person>
          <init>
            <parent_id/>
            <name/>
            <type/>
            <type_selector/>
            <type_label/>
          </init>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </data>
      </instance>
      <bind nodeset="/data/inputs" relevant="false()"/>
      <bind nodeset="/data/inputs/user/contact_id" type="string"/>
      <bind nodeset="/data/inputs/user/facility_id" type="string"/>
      <bind nodeset="/data/inputs/user/name" type="string"/>
      <bind nodeset="/data/init/parent_id" type="string" calculate=" /data/person/parent " readonly="true()"/>
      <bind nodeset="/data/init/name" type="string"/>
      <bind nodeset="/data/init/type" type="string"/>
      <bind nodeset="/data/init/type_selector" type="select1" calculate="../type"/>
      <bind nodeset="/data/init/type_label" type="string" calculate="jr:choice-name( /data/init/type_selector ,' /data/init/type_selector ')"/>
      <bind nodeset="/data/person/parent" type="string"/>
      <bind nodeset="/data/person/type" type="string"/>
      <bind nodeset="/data/person/name" type="string" required="true()"/>
      <bind nodeset="/data/person/aka" type="string"/>
      <bind nodeset="/data/person/docket" type="int"/>
      <bind nodeset="/data/person/telephone" type="tel" constraint="true()" jr:constraintMsg="Please enter a valid local number, or use the standard international format, which includes a plus sign (+) and country code. For example: +254712345678"/>
      <bind nodeset="/data/person/type1" type="select1"/>
      <bind nodeset="/data/person/cell" type="select1"/>
      <bind nodeset="/data/person/role" type="select1"/>
      <bind nodeset="/data/person/date_of_birth" type="date" constraint=". &lt;= today()" jr:constraintMsg="Date of birth cannot be in the future"/>
      <bind nodeset="/data/person/digital" type="int"/>
      <bind nodeset="/data/person/at" type="select1"/>
      <bind nodeset="/data/person/genda" type="select1"/>
      <bind nodeset="/data/person/stat" type="select1"/>
      <bind nodeset="/data/person/meta/created_by" type="string" calculate="../../../inputs/user/name"/>
      <bind nodeset="/data/person/meta/created_by_person_uuid" type="string" calculate="../../../inputs/user/contact_id"/>
      <bind nodeset="/data/person/meta/created_by_place_uuid" type="string" calculate="../../../inputs/user/facility_id"/>
      <bind nodeset="/data/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body>
    <group ref="/data/inputs">
      <label></label>
      <group appearance="hidden" ref="/data/inputs/user">
        <label></label>
        <input ref="/data/inputs/user/contact_id">
          <label>Contact ID of the logged in user</label>
        </input>
        <input ref="/data/inputs/user/facility_id">
          <label>Place ID of the logged in user</label>
        </input>
        <input ref="/data/inputs/user/name">
          <label>Name of the logged in user</label>
        </input>
      </group>
    </group>
    <group appearance="hidden" ref="/data/init">
      <label></label>
      <input appearance="db-object" ref="/data/init/parent_id">
        <label>Belongs To</label>
      </input>
      <input appearance="hidden" ref="/data/init/name">
        <label></label>
      </input>
      <input appearance="hidden" ref="/data/init/type">
        <label></label>
      </input>
      <select1 appearance="hidden" ref="/data/init/type_selector">
        <label></label>
        <item>
          <label>District</label>
          <value>district_hospital</value>
        </item>
        <item>
          <label>Health Center</label>
          <value>health_center</value>
        </item>
        <item>
          <label>Area</label>
          <value>clinic</value>
        </item>
      </select1>
    </group>
    <group appearance="field-list" ref="/data/person">
      <label></label>
      <input ref="/data/person/name">
        <label>Name</label>
      </input>
      <input ref="/data/person/aka">
        <label>Also Known As:</label>
      </input>
      <input ref="/data/person/docket">
        <label>Docket Number</label>
      </input>
      <input ref="/data/person/telephone">
        <label>Cell number</label>
      </input>
      <select1 ref="/data/person/type1">
        <label>Type of phone</label>
        <item>
          <label>Banger Phone</label>
          <value>banger</value>
        </item>
        <item>
          <label>SmartPhone</label>
          <value>smart</value>
        </item>
      </select1>
      <select1 ref="/data/person/cell">
        <label>Is it okay to leave a message on your cell phone?</label>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
      </select1>
      <select1 ref="/data/person/role">
        <label>Role</label>
        <hint ref="jr:itext('/data/person/role:hint')"/>
        <item>
          <label>CHW</label>
          <value>chw</value>
        </item>
        <item>
          <label>CHW Supervisor</label>
          <value>chw_supervisor</value>
        </item>
        <item>
          <label>Nurse</label>
          <value>nurse</value>
        </item>
        <item>
          <label>Facility Manager</label>
          <value>manager</value>
        </item>
        <item>
          <label>Patient</label>
          <value>patient</value>
        </item>
        <item>
          <label>Other</label>
          <value>other</value>
        </item>
      </select1>
      <input ref="/data/person/date_of_birth">
        <label>Date of Birth</label>
      </input>
      <input ref="/data/person/digital">
        <label>Age in years at today's Enrollment in the digital device:</label>
      </input>
      <select1 ref="/data/person/at">
        <label>Sex at birth</label>
        <item>
          <label>Male</label>
          <value>male</value>
        </item>
        <item>
          <label>Female</label>
          <value>female</value>
        </item>
        <item>
          <label>Intersex</label>
          <value>inter</value>
        </item>
      </select1>
      <select1 ref="/data/person/genda">
        <label>Gender Identity</label>
        <item>
          <label>Male</label>
          <value>gender_male</value>
        </item>
        <item>
          <label>Female</label>
          <value>gender_female</value>
        </item>
      </select1>
      <select1 ref="/data/person/stat">
        <label>Marital Status</label>
        <item>
          <label>Single</label>
          <value>single</value>
        </item>
        <item>
          <label>Married</label>
          <value>married</value>
        </item>
        <item>
          <label>Separated</label>
          <value>separated</value>
        </item>
        <item>
          <label>Divorced</label>
          <value>divorced</value>
        </item>
        <item>
          <label>Widowed</label>
          <value>widowed</value>
        </item>
        <item>
          <label>Common-Law</label>
          <value>common</value>
        </item>
      </select1>
      <group appearance="multiline" ref="/data/person/meta">
        <label></label>
      </group>
    </group>
  </h:body>
</h:html>
